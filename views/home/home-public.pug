extends ../layout/home

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block blockcontent
    div.py-5
        h2.text-center.text-2xl.font-extrabold=pagina       

        div(class="flex sm:flex-col flex-row items-center py-10 gap-4 justify-between")

            div(class="container mx-auto flex flex-row justify-stretch gap-5")
                div(class="w-full md:w-auto flex gap-2 mr-4 content-start basis-1/4")
                    h2(class="text-sm uppercase text-gray-800 font-bold") #{__('Filtrar propietats per:')}

                div(class="w-full md:w-auto flex flex-col gap-2 mr-4 justify-star basis-1/3")
                    label(for="categories" class="text-sm w-24 uppercase text-gray-700 font-bold") #{__('Categories')}
                    select(id="categories" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow" )
                        option(value="") #{__('Totes')}
                        each categoria in categories
                            option(value=categoria.id )= `${__(categoria.nom)}`

                div(class="w-full md:w-auto flex flex-col gap-2 justify-star  basis-1/3")
                    label(for="preus" class="text-sm w-24 uppercase text-gray-700 font-bold") #{__('Preus')}
                    select(id="preus" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow" )
                        option(value="") #{__('Tots')}
                        each preu in preus
                            option(value=preu.id )= preu.nom

        style.
            .leaflet-container a { color: #fff }
        div(id="mapa-inici" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") #{__('Ãšltimes propietats incorporades')}

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propietat in propietatsUltimes
                    include ../layout/templates/card

                    

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")