div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${propietat.imatge}` alt=`${__("imatge de la propietat")} ${propietat.titol}`)
    div(class="p-5 space-y-5")
        h3(class="text-2xl font-bold")= propietat.titol
        p(class="text-sm text-gray-600") #{__('Habitacions:')} 
            span(class="text-gray-800 font-bold")= propietat.habitacions
        p(class="text-sm text-gray-600") #{__('WC:')} 
            span(class="text-gray-800 font-bold")= propietat.wc
        p(class="text-sm text-gray-600") #{__('Preu:')}   
            span(class="text-gray-800 font-bold")= propietat.preu.nom
        a(href=`/propietat/${propietat.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded") #{__('Visualtzar Propietat')}  