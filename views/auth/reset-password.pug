extends ../layout/index

block blockcontent
    .py-5
        h2.text-center.text-2xl.font-extrabold= pagina

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-3(method="POST" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") #{__('Nova clau de pas')}
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder=`${__("El teu password")}` type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold.cursor-pointer(for="repetir_password") #{__('Repetiu la paraula de pas')}
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-500.rounded-md.placeholder-gray-700(
                                placeholder=`${__("repetir password")}` type="password" name="repetir_password" )
                    div.flex.items-center.justify-start.mt-3.gap-3
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold.cursor-pointer(for="codi") #{__('Escriu aquest codi:')} 
                        img(src= pngB64Codi alt=`${__("codi")}`) 
                    div
                        input#codi.w-full.px-3.py-2.border.border-gray-500.rounded-md.placeholder-gray-700(placeholder=`${__("CODI")}` type="email" name="codi" )                         
                        input(type="hidden" name="_tkintents" value= tkintents )   
                        input(type="hidden" name="_ccontrol" value= ccontrol )  

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value=`${__("Desar nou Password")}` )